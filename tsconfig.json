{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "types": ["node"],
    "outDir": "dist",
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["**/node_modules", "**/dist"]
}
